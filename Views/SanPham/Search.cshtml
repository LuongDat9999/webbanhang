@model IEnumerable<Demoapp.Model.Product>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<link href="~/Content/mycs/SanPhamCSS.css" rel="stylesheet" />
<style>
    .MenuPage li {
        font-size: 16px;
        display: inline;
        padding: 5px;
        border: 1px solid black;
        border-radius: 2px 2px 0 0;
    }
</style>
<div class="img-top">
    <img src="~/Content/Images/SPAo.jpg" style="width:100%;border-radius:30px 0" />
</div>
@using (Html.BeginForm("Search", "SanPham", FormMethod.Post))
{
    <div class="searchBox">
        <input class="searchInput" type="text" name="search" placeholder="Search">
        <button class="searchButton" type="submit">
            <img src="~/Content/Images/search.png" style="width:30px;height:30px;" />
        </button>
    </div>
    <div id="SanPham" class="main-prod">


        <!--Bảng sản phẩm-->
        <div class="list-product">

            @foreach (var pro in Model)
            {
                <!--Từng Sản phẩm-->
                <div class="item-pro">
                    <div class="pro-image">
                        <div class="img-1">
                            <a> <img src="@Url.Content(pro.ImagePro1)" /> </a>
                        </div>
                        <div class="img-2">
                            <a href="/SanPham/DetailPro/@pro.ProductID">
                                <img src="@Url.Content(pro.ImagePro2)" />
                            </a>
                        </div>
                    </div>
                    <div class="title-pro">
                        <p style="padding:20px">@Html.ActionLink(pro.NamePro, "DetailPro", new { id = pro.ProductID })</p>
                        <div class="price-card">
                            <div class="price-pro">
                                @if (pro.Discount > 0)
                                {
                                    <p style=" font-weight:600">
                                        @((pro.Price) - ((pro.Price * pro.Discount) / 100))
                                    </p>
                                    <p style=" text-decoration: line-through; font-weight: 300; "> @Html.DisplayFor(Model => pro.Price)<span>0</span></p>
                                }
                                else
                                {
                                    <p style=" text-decoration: none; font-weight: 600; "> @Html.DisplayFor(Model => pro.Price)</p>
                                }
                            </div>
                            <div class="card-pro">
                                <div class="dropdown">
                                    <button type="button" data-bs-toggle="dropdown">
                                        <img src="~/Content/Images/icon-bag.png" style="width:30px" title="Giỏ Hàng" />
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a href="/ShoppingCart/AddToCart/@pro.ProductID">S</a></li>
                                        <li><a href="/ShoppingCart/AddToCart/@pro.ProductID">M</a></li>
                                        <li><a href="/ShoppingCart/AddToCart/@pro.ProductID">L</a></li>
                                        <li><a href="/ShoppingCart/AddToCart/@pro.ProductID">XL</a></li>
                                        <li><a href="/ShoppingCart/AddToCart/@pro.ProductID">XXL</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}