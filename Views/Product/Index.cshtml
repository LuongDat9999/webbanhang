@model IEnumerable<Demoapp.Model.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>


<style>
    .fm-text {
        height: 100px;
        overflow: auto;
    }
</style>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NamePro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DecriptionPro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePro1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePro2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePro3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePro4)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Collection)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamePro)
            </td>
            <td>
                <p class="fm-text">@Html.DisplayFor(modelItem => item.DecriptionPro)</p>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                <img src="@Url.Content(item.ImagePro1)" height="50" width="50" />
            </td>
            <td>
                <img src="@Url.Content(item.ImagePro2)" height="50" width="50" />
            </td>
            <td>
                <img src="@Url.Content(item.ImagePro3)" height="50" width="50" />
            </td>
            <td>
                <img src="@Url.Content(item.ImagePro4)" height="50" width="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Collection)
            </td>
            <td style="text-align:center">
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }, new { @class = "btn btn-success" })
                @Html.ActionLink("Details", "Details", new { id = item.ProductID }, new { @class = "btn btn-dark" })
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
