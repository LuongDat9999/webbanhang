@model IEnumerable<Demoapp.Model.Collection>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}


<h2>Bộ sưu tầm</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDCol)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameCol)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImgCol)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDCol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameCol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImgCol)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-dark" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>